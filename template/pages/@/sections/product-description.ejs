<% if (_.state.body_html) { %>
  <div class="content-menu-description">
    <div class="container">
      <ul>
        <li>
          <a href="#product-description" class="description-selected">
            <%= _.dictionary('productDescription') %>
          </a>
        </li>
        <li>
          <a href="#product-specs" name="specs">
            <%= _.dictionary('productSpecifications') %>
          </a>
          
        </li>
      </ul>
    </div>
  </div>
  <section id="product-description" class="product-description my-4 my-lg-5 description-active">
    <div class="container">
      <!-- <p class="lead">
        <a href="#description" name="description">#</a>
        <%= _.dictionary('productDescription') %>
      </p> -->
      <div class="html-clearfix">
        <%- _.state.body_html.replace(
          /<img ([^/>]+)?src=['"]([^'"]+)['"]([^/>]+)?\/?>/g,
          '<img class="lozad" data-src="$2" $1 $3>'
        ).replace(
          /<img class="lozad" data-src="([^'"]+)"([^>]+)class=['"]([^'"]+)['"]([^/>]+)?>/g,
          '<img class="lozad $3" data-src="$1" $2 $4>'
        ) %>
      </div>
    </div>
  </section>
<% } %>

<%- await include('@/helpers/widgets-append', {
  _, opt: {}, field: 'productDescriptionAppend'
}) %>
